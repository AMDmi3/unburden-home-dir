# -*- shell-script -*-
# /etc/X11/Xsession.d/95unburden_home_dir
# This file is sourced by Xsession(5), not executed.

UNBURDEN_BASENAME=unburden_home_dir

if [ -e /etc/default/"${UNBURDEN_BASENAME}" ]; then
        . /etc/default/"${UNBURDEN_BASENAME}"
fi

if [ "${UNBURDEN_HOME_DIR}" != "false" -a \
     "${UNBURDEN_HOME_DIR}" != "no" ]; then

    /usr/bin/unburden-home-dir
fi
